<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Presentation.Vue.AccueilVue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/colorPrimary" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="15dp"
            android:fadingEdgeLength="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="25dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/radial_gradient"
                android:foregroundTint="#49040404"
                android:src="@drawable/montreal" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/bienvenue_chez_easystay"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:translationX="15dp"
                android:translationY="125dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:scaleX="1.85"
                android:scaleY="1.85"
                android:src="@drawable/reserver_icon"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/vos_up_coming_reservations"
                android:textColor="@color/colorText"
                android:textSize="25sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/RAList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:alpha="0.9"
                android:src="@drawable/bookmark"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/textFavoris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/vos_favoris"
                android:textColor="@color/colorText"
                android:textSize="25sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/RAListChambre"
            android:layout_width="match_parent"
            android:layout_height="600dp" />

    </LinearLayout>
</ScrollView>