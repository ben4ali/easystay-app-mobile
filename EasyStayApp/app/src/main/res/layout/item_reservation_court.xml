<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="gone">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:outlineAmbientShadowColor="#282828"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@color/colorSecondary"
            android:orientation="horizontal">

            <View
                android:id="@+id/RSIndicateur"
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="#5AE44F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/RSIDTypeChambre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="708 - CHAMBRES 2 LITS" />

                <TextView
                    android:id="@+id/RSDateDebut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024-11-03" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>